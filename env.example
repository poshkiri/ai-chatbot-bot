# Telegram Bot
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Database
DATABASE_URL=sqlite+aiosqlite:///./ai_bot.db
# Для PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/ai_chatbot_bot

MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=ai_chatbot_bot

# Redis (опционально - можно оставить пустым)
# Оставьте пустым, если не используете Redis:
# REDIS_URL=
# Локальный Redis:
# REDIS_URL=redis://localhost:6379/0
# Облачный Redis (Render, Upstash и т.д.):
# REDIS_URL=rediss://default:password@your-redis.render.com:6379

# AI Services
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Google AI
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_AI_TEMPERATURE=0.7

# Выбор провайдера: "openai" или "google"
AI_PROVIDER=openai

# AI Optimization
AI_CACHE_ENABLED=true
AI_CACHE_TTL=3600
AI_TIMEOUT=30
AI_MAX_RETRIES=3
AI_RETRY_DELAY=2
AI_FALLBACK_ENABLED=true
AI_FALLBACK_MODEL=gpt-3.5-turbo

# Channel Subscription
REQUIRED_CHANNEL_ID=@your_channel
REQUIRED_CHANNEL_USERNAME=your_channel

# Payments
PAYMENT_PROVIDER_TOKEN=your_payment_provider_token

# Subscription Settings
FREE_MESSAGES_LIMIT=10
TRIAL_MESSAGES_LIMIT=50
TRIAL_DURATION_DAYS=7
SUBSCRIPTION_PRICE=999
SUBSCRIPTION_DURATION_DAYS=30

# Rate Limiting
RATE_LIMIT_FREE_PER_MINUTE=5
RATE_LIMIT_FREE_PER_HOUR=50
RATE_LIMIT_FREE_PER_DAY=200
RATE_LIMIT_PAID_PER_MINUTE=20
RATE_LIMIT_PAID_PER_HOUR=500
RATE_LIMIT_PAID_PER_DAY=5000

# Admin
ADMIN_USER_IDS=123456789

# Broadcast
BROADCAST_BATCH_SIZE=30
BROADCAST_DELAY=0.05

# Media Processing
MAX_IMAGE_SIZE_MB=10
MAX_AUDIO_SIZE_MB=20
MEDIA_PROCESSING_TIMEOUT=60

# History & Storage
MAX_CONVERSATION_LENGTH=100
HISTORY_COMPRESSION_ENABLED=true
ARCHIVE_OLD_CONVERSATIONS_DAYS=90

# Monitoring & Analytics
ANALYTICS_ENABLED=true
LOG_LEVEL=INFO
SENTRY_DSN=

# Performance
ENABLE_TYPING_ACTION=true
TYPING_ACTION_DURATION=5
ASYNC_TASKS_ENABLED=true

